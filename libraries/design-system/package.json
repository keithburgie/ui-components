{
  "name": "@ui/design-system",
  "version": "0.0.0",
  "private": true,
  "exports": {
    "./tokens": "./src/tokens/index.css",
    "./components": {
      "types": "./dist/components/index.d.ts",
      "default": "./dist/components/index.js"
    }
  },
  "scripts": {
    "test": "vitest run",
    "build": "vite build && tsc --emitDeclarationOnly --declaration --declarationMap --outDir dist",
    "prebuild": "npm run generate:exports",
    "watch": "vite build --watch",
    "dev": "storybook dev -p 6006",
    "lint": "eslint . --max-warnings 0",
    "generate:component": "turbo gen react-component",
    "generate:exports": "node scripts/generate-exports.mjs",
    "check-types": "tsc --noEmit",
    "check-types:watch": "tsc --noEmit --watch --preserveWatchOutput",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.3",
    "@storybook/addon-a11y": "^10.1.3",
    "@storybook/addon-docs": "^10.1.3",
    "@storybook/addon-onboarding": "^10.1.3",
    "@storybook/addon-themes": "^10.1.4",
    "@storybook/addon-vitest": "^10.1.3",
    "@storybook/react-vite": "^10.1.3",
    "@tailwindcss/vite": "^4.1.17",
    "@tooling/eslint-config": "*",
    "@tooling/typescript-config": "*",
    "@types/node": "^22.15.3",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@vitest/browser-playwright": "^4.0.15",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^9.39.1",
    "eslint-plugin-storybook": "^10.1.3",
    "lucide-react": "^0.555.0",
    "playwright": "^1.57.0",
    "storybook": "^10.1.3",
    "typescript": "5.9.2",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "postcss": "^8.4.31",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.4.0",
    "tailwind-variants": "^3.2.2",
    "tailwindcss": "^4.1.17"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.0.0"
  }
}
